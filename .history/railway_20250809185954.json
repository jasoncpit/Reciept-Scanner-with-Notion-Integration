{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "/bin/sh -c \"exec gunicorn app.main:app --bind 0.0.0.0:${PORT} --workers ${WEB_CONCURRENCY:-2} --worker-class uvicorn.workers.UvicornWorker\"",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
} 